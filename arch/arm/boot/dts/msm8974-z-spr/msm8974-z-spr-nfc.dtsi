&soc {

	i2c@f9967000 {
		/* NXP */
		pn544@28 {
			compatible = "NXP,pn544";
			status = "ok";
			reg = <0x28>;
			NXP,i2c-pull-up = <1>;
			interrupt-parent = <&msmgpio>;
			interrupts = <59 0x2>;
			NXP,gpio_sda = <&msmgpio 83 0x00>;
			NXP,gpio_scl = <&msmgpio 84 0x00>;
			NXP,gpio_ven = <&msmgpio 94 0x00>;
			NXP,gpio_mode = <&msmgpio 95 0x00>;
			NXP,gpio_irq = <&msmgpio 59 0x00>;
		};
	};
	
	i2c@f9923000 {
		bcm2079x@77 {
			compatible = "bcm,bcm2079x";
			status = "disable";
			reg = <0x77>;
			bcm,i2c-pull-up = <1>;
			interrupt-parent = <&msmgpio>;
			interrupts = <59 0x2>;
			bcm,gpio_sda = <&msmgpio 2 0x00>;
			bcm,gpio_scl = <&msmgpio 3 0x00>;
			bcm,gpio_ven = <&msmgpio 94 0x00>;
			bcm,gpio_mode = <&msmgpio 92 0x00>;
			bcm,gpio_irq = <&msmgpio 59 0x00>;
		};
	};
};
